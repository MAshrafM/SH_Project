<div class="container">
<p id="notice"><%= notice %></p>
<h2>Rooms</h2>
<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-10 - col-md-offset-1 text-center">
			<ul class="list-inline list-room">
			<% @rooms.each do |room| %>
			  <li class="list-rooms-item">
				<div class="room-item">
				<%= link_to room do %>
					<%= image_tag(cycle("room_1.png", "room_2.png", "room_3.png", "room_4.png"), alt: "room", size: "300x300", class: "room-img") %>
					<span class="room-title-block">
						<span class="room-title"><%= room.name %> </span>
						<span class="ranking">Show</span>
					</span>
				<% end %>
				</div>
			  </li>
			<% end %>
			</ul>
		</div>
	</div>
</div>

	<div class="row">
		<div class="col-xs-12 col-md-4 col-md-offset-4">
		<%= link_to 'New Room', new_room_path, class: "btn btn-danger btn-block" %>
		</div>
	</div>
	<div style="padding:20px;"></div>
</div>

<script>
	$(function(){
		var url = window.location.href;
		history.replaceState(null, null, url);
	});
</script>