<!DOCTYPE html>
<html>
<head>
  <title>SHProject</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="loginModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
        <!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4 class="modal-title">Login </h4>
				</div>
				<div class="modal-body">
					<%= form_for(:user, url: homes_path, :html => {:class => "form-horizontal"}) do |f| %>
						<div class="form-group">
							<label class="col-xs-3 control-label">Name</label>
							<div class="col-xs-8">
								<%= f.text_field :username, :class => "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-xs-3 control-label">Password</label>
							<div class="col-xs-8">
								<%= f.password_field :password, :class => "form-control" %>
							</div>
						</div>
						<div class="form-group">
							<div class="col-xs-3 col-xs-offset-2"><%= f.submit "Login", :class => "btn btn-primary btn-block"%></div>
							<div class="col-xs-3 col-xs-offset-2"><button type="button" class="btn btn-default btn-block" data-dismiss="modal">Cancel</button></div>
						</div>
					<% end %>
					

				</div>
			</div>
        </div>
    </div>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to "Project", root_path, class: "navbar-brand" %>
			</div>
			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="<%= active_class(root_path) %>"><%= link_to "<span class='glyphicon glyphicon-home'></span> Home".html_safe, root_path %>
					<li class="<%= active_class(about_path) %>"><%= link_to "<span class='glyphicon glyphicon-info-sign'></span> About".html_safe, about_path %></li>
					<li class="<%= active_class(contact_path) %>"><%= link_to content_tag(:i, fa_icon("envelope-o", text: "Contact")), contact_path %></li>
				</ul>
				
				<ul class="nav navbar-nav navbar-right">
					<% if logged_in? %>
						<li><%= link_to content_tag(:i, " Dashboard", class: "fa fa-home"), rooms_path %></li>
						<li><%= link_to "Logout", logout_path, method: :delete %></li>
					<% else %>
						<li><a data-toggle="modal" data-target="#loginModal" href="#">
							<span class="glyphicon glyphicon-log-in"></span> Login</a>
						</li>
					<% end %>
                </ul>
				
			</div>
		</div>
	</nav>
	

	<%= yield %>

	
	<footer class="row-footer">
        <div class="container">
            <div class="row">             
                <div class="col-xs-5 col-sm-2 col-xs-offset-1 col-sm-offset-1">
                    <h5>Links</h5>
                    <ul class="list-unstyled">
                        <li><%= link_to "Home", root_path %></li>
                        <li><%= link_to "About", about_path %></li>
                        <li><%= link_to "Contact", contact_path %></li>
                    </ul>
                </div>
                <div class="col-xs-6 col-sm-5">
                    <h5>Our Address</h5>
                    <address>
		              ##st ...<br>
		              Alexandria<br>
		              Egypt<br>
		              <i class="fa fa-phone"></i>: +02 1111 111<br>
		              <i class="fa fa-envelope"></i>: Email
		           </address>
                </div>
                <div class="col-xs-12 col-sm-4">
                    <div class="nav navbar-nav" style="padding: 40px 10px;">
                        <a class="btn btn-social-icon btn-google-plus" ><i class="fa fa-google-plus"></i></a>
                        <a class="btn btn-social-icon btn-facebook" ><i class="fa fa-facebook"></i></a>
                        <a class="btn btn-social-icon btn-linkedin" ><i class="fa fa-linkedin"></i></a>
                        <a class="btn btn-social-icon btn-twitter" ><i class="fa fa-twitter"></i></a>
                        <a class="btn btn-social-icon btn-youtube" ><i class="fa fa-youtube"></i></a>
                        <a class="btn btn-social-icon btn-default" ><i class="fa fa-envelope-o"></i></a>
                    </div>
                </div>
                <div class="col-xs-12">
                    <p style="padding:10px;"></p>
                    <p align=center> &copy; Copyright 2015 MAshraf</p>
                </div>
            </div>
        </div>
    </footer>


</body>
</html>
