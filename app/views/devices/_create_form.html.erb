<%= form_for([@room, @room.devices.new], :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-sm-4 control-label">Light</label>
    <div class="col-sm-6">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-success">
          <%= f.radio_button :light, true, :value=> true, :checked => @devices_log.light %>
          <%= f.label :light, 'ON', :value => true %>
        </label>
        <label class="btn btn-danger">
          <%= f.radio_button :light, false, :value=> false, :checked => !@devices_log.light %>
          <%= f.label :light, 'OFF', :value => false %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Door</label>
    <div class="col-sm-6">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-success">
          <%= f.radio_button :door, true, :value=> true, :checked => @devices_log.door %>
          <%= f.label :door, 'ON', :value => true %>
        </label>
        <label class="btn btn-danger">
          <%= f.radio_button :door, false, :value=> false, :checked => !@devices_log.door %>
          <%= f.label :door, 'OFF', :value => false %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Shades</label>
    <div class="col-sm-6">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-success">
          <%= f.radio_button :shade, true, :value=> true, :checked => @devices_log.shade  %>
          <%= f.label :shade, 'ON', :value => true %>
        </label>
        <label class="btn btn-danger">
          <%= f.radio_button :shade, false, :value=> false, :checked => !@devices_log.shade %>
          <%= f.label :shade, 'OFF', :value => false %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Camera</label>
    <div class="col-sm-6">
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-success">
          <%= f.radio_button :camera, true, :value=> true, :checked => @devices_log.camera  %>
          <%= f.label :camera, 'ON', :value => true %>
        </label>
        <label class="btn btn-danger">
          <%= f.radio_button :camera, false, :value=> false, :checked => !@devices_log.camera %>
          <%= f.label :camera, 'OFF', :value => false %>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">AC</label>
    <div class="col-sm-6">
      <% op = (18..35).map{|i| [i,i]} %>
      <% op.unshift([0,0]) %>
      <%= f.select :ac, options_for_select(op, [@devices_log.ac, @devices_log.ac]) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
      <%= f.submit "Update", :class => "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
